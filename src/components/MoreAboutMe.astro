---
import Card from "./Card/index.astro";
import { Icon } from 'astro-icon/components';
interface Props {
  title?: string;
  body?: string;
  colSpan?: string;
  rowSpan?: string;
  href?: string;
  colorText?: string;
}
const { title, body, colSpan, rowSpan, href, colorText } = Astro.props;
---
<style>
ul {  
  text-indent: -22.5px; /* key property */
  margin-left: 30px; /* key property */
  
}
li { margin-bottom: 5px; }

div.scroll {
  height: 970px;
  overflow-x: hidden;
  overflow-y: auto;
  scrollbar-width: none;
}
p span {
  font-size: 1.2em;
}
</style>


<Card colSpan="md:col-span-3" rowSpan="md:row-span-12">
  <div>
  <div class="flex flex-col gap-2 scroll">
    <h1 class="text-xl font-light">
      <p>
        <span><b>About Me</b></span>
      </p>
    </h1>
